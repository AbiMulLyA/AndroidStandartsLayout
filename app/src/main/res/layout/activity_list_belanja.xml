<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListBelanjaActivity">

    <ScrollView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@color/gray"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <View
        android:id="@+id/item1"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <View
        android:id="@+id/item2"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_below="@id/item1"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/item3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item1" />

    <View
        android:id="@+id/item3"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item2" />

    <ImageView
        android:id="@+id/cart1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="360dp"
        app:layout_constraintBottom_toBottomOf="@id/item1"
        app:layout_constraintEnd_toEndOf="@id/item1"
        app:layout_constraintStart_toStartOf="@id/item1"
        app:layout_constraintTop_toTopOf="@id/item1"
        app:layout_constraintVertical_bias="0.56"
        app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

    <TextView
        android:id="@+id/itemName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TELUR"
        app:layout_constraintBottom_toTopOf="@id/weightItem1"
        app:layout_constraintEnd_toEndOf="@id/item1"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toEndOf="@id/cart1"
        app:layout_constraintTop_toTopOf="@id/item1"
        app:layout_constraintVertical_bias="0.48000002" />

    <TextView
        android:id="@+id/weightItem1"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="1 kg"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/itemPrice1"
        app:layout_constraintEnd_toEndOf="@id/item1"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@id/cart1"
        app:layout_constraintTop_toBottomOf="@id/itemName1"
        app:layout_constraintVertical_bias="0.307"
        tools:ignore="SmallSp"/>

    <TextView
        android:id="@+id/itemPrice1"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="Rp.26.000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item1"
        app:layout_constraintEnd_toStartOf="@id/Date1"
        app:layout_constraintStart_toEndOf="@id/cart1"
        app:layout_constraintTop_toBottomOf="@id/weightItem1"/>

    <TextView
        android:id="@+id/Date1"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginEnd="150dp"
        android:text="30-12-2020 10:00"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/itemPrice1"
        app:layout_constraintEnd_toEndOf="@id/item1"
        app:layout_constraintStart_toEndOf="@id/itemPrice1"
        app:layout_constraintTop_toBottomOf="@id/weightItem1"
        app:layout_constraintVertical_bias="1.0"/>

    <ImageView
        android:id="@+id/cart2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="360dp"
        app:layout_constraintBottom_toBottomOf="@id/item2"
        app:layout_constraintEnd_toEndOf="@id/item2"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@id/item2"
        app:layout_constraintTop_toTopOf="@id/item2"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

    <ImageView
        android:id="@+id/cart3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_baseline_shopping_cart_24"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="360dp"
        app:layout_constraintBottom_toBottomOf="@id/item3"
        app:layout_constraintEnd_toEndOf="@id/item3"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@id/item3"
        app:layout_constraintTop_toTopOf="@id/item3"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/itemName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="GULA"
        app:layout_constraintBottom_toTopOf="@id/weightItem2"
        app:layout_constraintEnd_toEndOf="@id/item2"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toEndOf="@id/cart2"
        app:layout_constraintTop_toTopOf="@id/item2"
        app:layout_constraintVertical_bias="0.48000002"/>

    <TextView
        android:id="@+id/itemName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="BERAS"
        app:layout_constraintBottom_toTopOf="@id/weightItem3"
        app:layout_constraintEnd_toEndOf="@id/item3"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@id/cart3"
        app:layout_constraintTop_toTopOf="@id/item3"
        app:layout_constraintVertical_bias="0.48000002"/>

    <TextView
        android:id="@+id/weightItem2"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="10 kg"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/itemPrice2"
        app:layout_constraintEnd_toEndOf="@id/item2"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@id/cart2"
        app:layout_constraintTop_toBottomOf="@id/itemName2"
        app:layout_constraintVertical_bias="0.307"
        tools:ignore="SmallSp"/>

    <TextView
        android:id="@+id/weightItem3"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="25 kg"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/itemPrice3"
        app:layout_constraintEnd_toEndOf="@id/item3"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@id/cart3"
        app:layout_constraintTop_toBottomOf="@id/itemName3"
        app:layout_constraintVertical_bias="0.307"
        tools:ignore="SmallSp"/>

    <TextView
        android:id="@+id/itemPrice3"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="Rp.250.000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item3"
        app:layout_constraintEnd_toStartOf="@id/Date3"
        app:layout_constraintStart_toEndOf="@id/cart3"
        app:layout_constraintTop_toBottomOf="@id/weightItem3"/>

    <TextView
        android:id="@+id/Date3"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginEnd="150dp"
        android:text="30-12-2020 10:00"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/itemPrice3"
        app:layout_constraintEnd_toEndOf="@id/item3"
        app:layout_constraintStart_toEndOf="@id/itemPrice3"
        app:layout_constraintTop_toBottomOf="@id/weightItem3"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/itemPrice2"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="Rp.18.000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item2"
        app:layout_constraintEnd_toStartOf="@id/Date2"
        app:layout_constraintStart_toEndOf="@id/cart2"
        app:layout_constraintTop_toBottomOf="@id/weightItem2"/>

    <TextView
        android:id="@+id/Date2"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginEnd="150dp"
        android:text="30-12-2020 10:00"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/itemPrice2"
        app:layout_constraintEnd_toEndOf="@id/item2"
        app:layout_constraintStart_toEndOf="@id/itemPrice2"
        app:layout_constraintTop_toBottomOf="@id/weightItem2"
        app:layout_constraintVertical_bias="1.0"/>

    tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="56dp" />
</androidx.constraintlayout.widget.ConstraintLayout>